<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_address_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Delievery Address Details"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_wing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Wing"
        android:inputType="textPostalAddress"
        android:textColor="@color/text_color_white"
        app:layout_constraintTop_toBottomOf="@+id/text_address_details" />

    <EditText
        android:id="@+id/edit_flat_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Flat No."
        android:inputType="textPostalAddress"
        android:textColor="@color/text_color_white"
        app:layout_constraintTop_toBottomOf="@+id/edit_wing" />

    <EditText
        android:id="@+id/edit_society_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Society / Bungalow Name"
        android:inputType="textPostalAddress"
        android:textColor="@color/text_color_white"
        app:layout_constraintTop_toBottomOf="@+id/edit_flat_no" />

    <EditText
        android:id="@+id/edit_landmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Street / Landmark"
        android:inputType="textPostalAddress"
        android:textColor="@color/text_color_white"
        app:layout_constraintTop_toBottomOf="@+id/edit_society_name" />

    <EditText
        android:id="@+id/edit_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Area"
        android:inputType="textPostalAddress"
        android:textColor="@color/text_color_white"
        app:layout_constraintTop_toBottomOf="@+id/edit_landmark" />

    <EditText
        android:id="@+id/edit_pincode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Pincode"
        android:inputType="numberDecimal"
        android:textColor="@color/text_color_white"
        app:layout_constraintTop_toBottomOf="@+id/edit_area" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:text="Register"
        app:layout_constraintTop_toBottomOf="@+id/edit_pincode" />

</androidx.constraintlayout.widget.ConstraintLayout>